---
import Layout from "../layouts/BaseLayout.astro";
import Home from "../components/Global/Home/Home.astro";
import Main from "../components/Global/Main.astro";
import LeafletMap from "../components/map.vue";

// Generate static paths for each language
export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "no" } },
  ];
}

// Get language from URL params (default to English)
const lang = (Astro.params.lang || "en") as "no" | "en";

// Set the page title based on language
const pageTitle = lang === "en" ? "Home" : "Hjem";
---

<Layout lang={lang} pageTitle={pageTitle}>
  <Main>
    <Home client:only="react" lang={lang} />
    <LeafletMap client:only="vue" />
  </Main>
</Layout>
