---
import sortifyHeader from "../../public/sortify-header.png";
import SignupModal from "./Modal_signup"
---

<div id="container">
    <header>
        <nav>
            <a href="/" id="logo">
                <img src={sortifyHeader.src} alt="sortify logo" width="200" />
            </a>
            <div id="links">
                <a href="/" id="button">Home</a>
                <a href="/stats" id="button">Statistics</a>
                <a
                    href="https://docs.astro.build/en/develop-and-build/"
                    id="button">Docs</a
                >
            </div>
            <a id="button">
                <SignupModal client:only="react"/> <!-- Modal for signing up or logging in -->
            </a>
        </nav>
    </header>
</div>

<style>
    nav {
        display: flex;
        border: 1px solid #000000;
        text-align: center;
    }
    #id {
        display: block;
        margin: auto;
    }
    #links {
        margin-top: auto;
        margin-bottom: auto;
    }
    #button {
         display: inline-block;
         padding: 12px 24px;  /* Adds space inside the button */
         font-size: 1.2rem;  /* Adjust text size */
         font-weight: bold;  /* Make text a bit bolder */
         color: #000000;  /* White text color */
         text-decoration: none;  /* Remove underline */
         background-color: #87C75C;  /* Modern green color */
         border: none;  /* Remove default border */
         border-radius: 25px;  /* Fully rounded corners */
         box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);  /* Soft shadow */
         transition: all 0.3s ease;
         cursor: pointer;  /* Makes it clear it's clickable */
     }
    #button:hover {
        background-color: #187B1B;  /* Slightly darker green on hover */
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);  /* More depth on hover */
    }
    #button:active {
        background-color: #388E3C;  /* Even darker green when clicked */
        transform: scale(0.98);  /* Slight press effect */
    }
    #button:hover {
        background-color: #4f7e52;
    }
    #logo {
        margin-top: auto;
        margin-bottom: auto;
        padding: 5px;
    }
</style>
